{
  "annotations": { "list": [] },
  "editable": true,
  "fiscalYearStartMonth": 0,
  "graphTooltip": 1,
  "links": [],
  "panels": [
    {
      "title": "Exchange Connectivity",
      "type": "stat",
      "gridPos": { "h": 4, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "orderbook_exchange_up",
          "legendFormat": "{{exchange}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "options": { "0": { "text": "DOWN", "color": "red" }, "1": { "text": "UP", "color": "green" } }, "type": "value" }
          ],
          "thresholds": { "mode": "absolute", "steps": [{ "color": "red", "value": null }, { "color": "green", "value": 1 }] }
        },
        "overrides": []
      }
    },
    {
      "title": "Uptime",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "orderbook_uptime_seconds",
          "legendFormat": "uptime",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "s"
        },
        "overrides": []
      }
    },
    {
      "title": "Total Merges",
      "type": "stat",
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 0 },
      "targets": [
        {
          "expr": "orderbook_merges_total",
          "legendFormat": "merges",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": {}, "overrides": [] }
    },
    {
      "title": "Messages / sec (by exchange)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 4 },
      "targets": [
        {
          "expr": "rate(orderbook_messages_total[1m])",
          "legendFormat": "{{exchange}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        },
        "overrides": []
      }
    },
    {
      "title": "Errors / sec (by exchange)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 4 },
      "targets": [
        {
          "expr": "rate(orderbook_errors_total[1m])",
          "legendFormat": "{{exchange}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": { "drawStyle": "line", "fillOpacity": 10 },
          "thresholds": { "mode": "absolute", "steps": [{ "color": "green", "value": null }, { "color": "red", "value": 0.1 }] }
        },
        "overrides": []
      }
    },
    {
      "title": "Merges / sec",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 12 },
      "targets": [
        {
          "expr": "rate(orderbook_merges_total[1m])",
          "legendFormat": "merges/s",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "ops",
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        },
        "overrides": []
      }
    },
    {
      "title": "Cumulative Messages (by exchange)",
      "type": "timeseries",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 12 },
      "targets": [
        {
          "expr": "orderbook_messages_total",
          "legendFormat": "{{exchange}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "custom": { "drawStyle": "line", "fillOpacity": 10 }
        },
        "overrides": []
      }
    }
  ],
  "refresh": "5s",
  "schemaVersion": 39,
  "tags": ["orderbook"],
  "templating": { "list": [] },
  "time": { "from": "now-15m", "to": "now" },
  "title": "Order Book Aggregator",
  "uid": "orderbook-aggregator"
}
